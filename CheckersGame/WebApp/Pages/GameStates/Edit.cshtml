@page
@model WebApp.Pages.GameStates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CheckersGameState</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CheckersGameState.Id" />
            <div class="form-group">
                <label asp-for="CheckersGameState.SerializedBoardState" class="control-label"></label>
                <input asp-for="CheckersGameState.SerializedBoardState" class="form-control" />
                <span asp-validation-for="CheckersGameState.SerializedBoardState" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CheckersGameState.PlayerOneIsCurrent" /> @Html.DisplayNameFor(model => model.CheckersGameState.PlayerOneIsCurrent)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGameState.UpdatedAt" class="control-label"></label>
                <input asp-for="CheckersGameState.UpdatedAt" class="form-control" />
                <span asp-validation-for="CheckersGameState.UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGameState.CheckersGameId" class="control-label"></label>
                <select asp-for="CheckersGameState.CheckersGameId" class="form-control" asp-items="ViewBag.CheckersGameId"></select>
                <span asp-validation-for="CheckersGameState.CheckersGameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGameState.SerializedNextMoves" class="control-label"></label>
                <input asp-for="CheckersGameState.SerializedNextMoves" class="form-control" />
                <span asp-validation-for="CheckersGameState.SerializedNextMoves" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
