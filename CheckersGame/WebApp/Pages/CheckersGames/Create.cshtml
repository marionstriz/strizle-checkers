@page
@using GameBrain
@model WebApp.Pages.CheckersGames.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CheckersGame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CheckersGame.Name" class="control-label"></label>
                <input asp-for="CheckersGame.Name" class="form-control" />
                <span asp-validation-for="CheckersGame.Name" class="text-danger"></span>
                <span class="text-danger">@Html.ValidationMessage("unique-name")</span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.GameOptionsId" class="control-label"></label>
                <select asp-for="CheckersGame.GameOptionsId" class ="form-select" asp-items="Model.OptionsSelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.PlayerOneId" class="control-label"></label>
                <select asp-for="CheckersGame.PlayerOneId" class ="form-select" asp-items="Model.PlayerSelectList"></select>
                <span asp-validation-for="CheckersGame.PlayerOneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.PlayerOneColor" class="control-label"></label>
                <select asp-for="CheckersGame.PlayerOneColor" class ="form-select" asp-items="Html.GetEnumSelectList<EColor>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="CheckersGame.PlayerTwoId" class="control-label"></label>
                <select asp-for="CheckersGame.PlayerTwoId" class ="form-select" asp-items="Model.PlayerSelectList"></select>
                <span asp-validation-for="CheckersGame.PlayerTwoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
